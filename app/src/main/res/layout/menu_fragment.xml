<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".fragments.MainMenuFragment">

    <Button
        android:id="@+id/b_juego"
        android:layout_width="183dp"
        android:layout_height="59dp"
        android:layout_marginTop="236dp"
        android:text="JUGAR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/b_creditos"
        android:layout_width="183dp"
        android:layout_height="59dp"
        android:layout_marginTop="40dp"
        android:text="CREDITOS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_juego" />

    <Button
        android:id="@+id/button5"
        android:layout_width="183dp"
        android:layout_height="59dp"
        android:layout_marginTop="40dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_creditos" />

</androidx.constraintlayout.widget.ConstraintLayout>